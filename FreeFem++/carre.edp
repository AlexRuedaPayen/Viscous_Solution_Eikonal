real H = 1, L=1;

border bas(t=0, L) {x=t; y=0;label=1;}
border droite(t=0, H) {x=L; y=t;label=2;}
border haut(t=L,0) {x=t; y=H;label=3;}
border gauche(t=H,0) {x=0; y=t;label=4;}
border milieu(t = 0, L){x = t ; y=0.5 ; label = 5;}

real meshsize= 0.15;
int Nx= L/meshsize, Ny=H/meshsize;

func bordext = bas(Nx)+haut(Nx)+gauche(Ny)+droite(Ny)+milieu(Nx);

plot(bordext,wait=1);

mesh Th= buildmesh(bordext);
savemesh(Th,"Th.msh");

plot(Th);
